<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:id="@+id/hs_font_panel"
        android:visibility="gone"
        android:background="#e6e6e6"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_bold"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="11.5dp"
                android:scaleType="centerInside"
                android:src="@drawable/bold_select"
                />
            <ImageView
                android:id="@+id/iv_italics"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="11.5dp"
                android:scaleType="centerInside"
                android:src="@drawable/italics_select"
                />
            <ImageView
                android:id="@+id/iv_center_line"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="11.5dp"
                android:scaleType="centerInside"
                android:src="@drawable/centerline_select"
                />
            <ImageView
                android:id="@+id/iv_under_line"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="11.5dp"
                android:scaleType="centerInside"
                android:src="@drawable/underline_select"
                />
            <ImageView
                android:id="@+id/iv_refer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="11.5dp"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/refer_select"
                />
            <TextView
                android:id="@+id/tv_h1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="H1"
                android:gravity="center"
                android:textSize="23dp"
                android:textColor="@drawable/title_select"
                />
            <TextView
                android:id="@+id/tv_h2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="H2"
                android:gravity="center"
                android:textSize="23dp"
                android:textColor="@drawable/title_select"
                />
            <TextView
                android:id="@+id/tv_h3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="H3"
                android:gravity="center"
                android:textSize="23dp"
                android:textColor="@drawable/title_select"
                />
            <TextView
                android:id="@+id/tv_h4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="H4"
                android:gravity="center"
                android:textSize="23dp"
                android:textColor="@drawable/title_select"
                />
            <ImageView
                android:id="@+id/iv_link"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="11.5dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside"
                android:src="@drawable/link_select"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/pic_unselected"
                />

            <ImageView
                android:id="@+id/iv_font"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/font_select"
                />

            <FrameLayout
                android:id="@+id/layout_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>